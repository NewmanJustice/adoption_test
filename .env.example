# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
APP_ENV=DEV

# Server Configuration
PORT=3001

# Database Configuration
# For local development with Docker Compose
LOCAL_DATABASE_URL=postgresql://adoption:adoption@localhost:5432/adoption

# For Azure PostgreSQL (update with your credentials)
# DEV_DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=require
# TEST_DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=require
# PROD_DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=require

# Session Configuration
SESSION_SECRET=change-this-to-a-random-32-byte-value-in-production

# Redis Configuration (for Bull queue)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password-here
# REDIS_TLS=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Storage Configuration
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
# For Azure Blob Storage:
# STORAGE_TYPE=azure
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_STORAGE_CONTAINER_NAME=adoption-documents

# ClamAV Antivirus Configuration
# CLAMAV_HOST=localhost
# CLAMAV_PORT=3310

# Prototype Annotator (Development Only)
ANNOTATION_ENABLED=true
ANNOTATION_DB_PATH=./prototype-annotator/annotator.sqlite

# Azure Application Insights (Production Only)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# Site Access Code (optional password for entire site)
# SITE_ACCESS_CODE=your-access-code-here
