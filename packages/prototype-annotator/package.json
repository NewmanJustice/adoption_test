{
  "name": "prototype-annotator",
  "version": "0.2.4",
  "description": "In-browser annotation capabilities with SQLite persistence and template-based prompt generation",
  "author": "Newman Justice",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NewmanJustice/prototype_annotator-.git"
  },
  "homepage": "https://github.com/NewmanJustice/prototype_annotator-#readme",
  "bugs": {
    "url": "https://github.com/NewmanJustice/prototype_annotator-/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "client/dist"
  ],
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsup",
    "build:client": "npm run build:overlay && npm run build:dashboard",
    "build:overlay": "vite build --config vite.config.ts --mode overlay",
    "build:dashboard": "vite build --config vite.config.ts --mode dashboard",
    "dev": "tsup --watch",
    "dev:overlay": "vite build --config vite.config.ts --mode overlay --watch",
    "dev:dashboard": "vite --config vite.config.ts --mode dashboard",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.client.json",
    "example": "npx tsx example/server.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.0",
    "sql.js": "^1.11.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^9.0.0",
    "preact": "^10.19.0",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "annotation",
    "prototype",
    "express",
    "middleware",
    "design-feedback"
  ],
  "license": "MIT"
}
